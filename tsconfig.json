{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "./dist/js",
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "lib": ["ES2019", "DOM"]
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
